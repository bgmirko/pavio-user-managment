<div class="backdrop"></div>
<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/most-liked' ? 'active' : '' %>" href="/">User Ranking</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/user' ? 'active' : '' %>" href="/user">User Details</a>
            </li>
        </ul>
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
            </li>
            <% if (isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <% } else { %>
                    <li class="main-header__item">
                        <a class="<%= path === '/logout' ? 'active' : '' %>" href="/logout">Logout</a>
                    </li>
                    <% } %>
        </ul>
    </nav>
</header>